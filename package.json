{
  "name": "tw-core",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build:system": "tsc -p config/tsconfig.system.json",
    "build:cjs": "ngc -p config/tsconfig.cjs.json",
    "build:js": "npm run build:cjs && npm run build:system",
    "build": "rm -R dist && mkdir dist && cp -R src/* dist",
    "test": "karma start config/karma.conf.js",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "demo:watch": "webpack --config config/webpack.config.js --progress --colors --watch",
    "demo:dist": "webpack --config config/webpack.config.js --progress --colors -p --env.prod",
    "publish-lib": "npm run test && npm run build && npm run demo:dist"
  },
  "private": true,
  "main": "index",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/toolwatchapp/tw-common"
  },
  "bugs": {
    "url": "https://github.com/toolwatchapp/tw-common/issues"
  },
  "author": "Mathieu Nayrolles <mathieu.nayrolles@gmail.com>",
  "dependencies": {
    "ng2-translate": "^3.1.0"
  },
  "devDependencies": {
    "@angular/common": "2.1.1",
    "@angular/compiler": "2.1.1",
    "@angular/compiler-cli": "2.1.1",
    "@angular/core": "2.1.1",
    "@angular/forms": "2.1.1",
    "@angular/http": "2.1.1",
    "@angular/platform-browser": "2.1.1",
    "@angular/platform-browser-dynamic": "2.1.1",
    "@angular/platform-server": "2.1.1",
    "@angular/router": "3.1.2",
    "@ngtools/webpack": "1.1.4",
    "@types/es6-shim": "^0.31.32",
    "@types/jasmine": "^2.5.35",
    "@types/node": "^6.0.45",
    "angular2-template-loader": "0.6.0",
    "bulma": "0.2.3",
    "core-js": "^2.4.0",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.2.0",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.35.0",
    "highlight.js": "^9.1.0",
    "html-loader": "^0.4.3",
    "intern": "^3.3.2",
    "jasmine-core": "^2.4.1",
    "json-loader": "^0.5.4",
    "karma": "1.2.0",
    "karma-chrome-launcher": "2.0.0",

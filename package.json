{
  "name": "tw-core",
  "version": "2.0.5",
  "license": "MIT",
  "main": "bundles/tw-core.umd.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "test": "karma start",
    "test-watch": "karma start --singleRun=false --autoWatch=true",
    "commit": "npm run prepublish && npm test && git-cz",
    "prepublish": "ngc && npm run build",
    "build": "webpack && cp bundles/tw-core.umd.js bundles/index.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toolwatchapp/tw-core"
  },
  "bugs": {
    "url": "https://github.com/toolwatchapp/tw-core/issues"
  },
  "author": "Mathieu Nayrolles <mathieu.nayrolles@gmail.com>",
  "dependencies": {
    "@angular/common": "2.2.1",
    "@angular/core": "2.2.1",
    "@angular/forms": "2.2.1",
    "@angular/http": "2.2.1",
    "@angular/platform-browser": "2.2.1",
    "@angular/platform-browser-dynamic": "2.2.1",
    "@angular/platform-server": "2.2.1",
    "ng2-translate": "^5.0.0",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "0.6.21"
  },
  "devDependencies": {
    "@angular/compiler": "2.2.1",
    "@angular/compiler-cli": "2.2.1",
    "@types/core-js": "^0.9.35",
    "@types/jasmine": "^2.5.35",
    "@types/node": "^6.0.45",
    "awesome-typescript-loader": "3.0.0-beta.17",
    "commitizen": "2.9.2",
    "cz-conventional-changelog": "1.2.0",
    "typescript": "2.0.9",
    "webpack": "2.1.0-beta.27",
    "semantic-release": "6.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

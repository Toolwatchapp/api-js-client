{
  "name": "tw-core",
  "version": "2.1.1",
  "license": "MIT",
  "main": "bundles/tw-core.umd.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "test": "karma start",
    "test-watch": "karma start --singleRun=false --autoWatch=true",
    "commit": "npm run prepublish && npm test && git-cz",
    "prepublish": "ngc && npm run build",
    "build": "webpack && cp bundles/tw-core.umd.js bundles/index.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "watch": "watch 'npm run build' src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toolwatchapp/tw-core"
  },
  "bugs": {
    "url": "https://github.com/toolwatchapp/tw-core/issues"
  },
  "author": "Mathieu Nayrolles <mathieu.nayrolles@gmail.com>",
  "dependencies": {
    "@angular/common": "4.0.0",
    "@angular/compiler": "4.0.0",
    "@angular/compiler-cli": "4.0.0",
    "@angular/core": "4.0.0",
    "@angular/forms": "4.0.0",
    "@angular/http": "4.0.0",
    "@angular/animations": "4.0.0",
    "@angular/platform-browser": "4.0.0",
    "@angular/platform-browser-dynamic": "4.0.0",
    "@angular/platform-server": "4.0.0",
    "ng2-translate": "5.0.0",
    "rxjs": "5.1.1",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/compiler": "4.0.0",
    "@angular/compiler-cli": "4.0.0",
    "@types/core-js": "0.9.35",
    "@types/jasmine": "2.5.35",
    "@types/node": "6.0.45",
    "awesome-typescript-loader": "3.0.0-beta.17",
    "commitizen": "2.9.2",
    "cz-conventional-changelog": "1.2.0",
    "semantic-release": "6.3.2",
    "typescript": "~2.2.1",
    "webpack": "^2.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
